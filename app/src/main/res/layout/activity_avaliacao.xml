<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AvaliacaoActivity">

    <ImageView
        android:id="@+id/background_top_IV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tela_avaliacao_servicos_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Serviços"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/background_top_IV"
        app:layout_constraintStart_toStartOf="@id/background_top_IV"
        app:layout_constraintTop_toTopOf="@id/background_top_IV"
        android:fontFamily="@font/judson"/>

    <TextView
        android:id="@+id/tela_avaliacao_avaliacoes_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliações"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:fontFamily="@font/judson"
        app:layout_constraintStart_toStartOf="@id/background_top_IV"
        app:layout_constraintEnd_toEndOf="@id/background_top_IV"
        app:layout_constraintTop_toTopOf="@id/background_top_IV"
        app:layout_constraintBottom_toBottomOf="@id/background_top_IV"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tela_avaliacao_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes"
        android:textColor="@color/black"
        android:fontFamily="@font/judson"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/background_top_IV"
        app:layout_constraintTop_toTopOf="@id/background_top_IV"
        app:layout_constraintBottom_toBottomOf="@id/background_top_IV"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/nota_avaliacao_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5,0"
        android:textSize="33sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_top_IV"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/judson"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>