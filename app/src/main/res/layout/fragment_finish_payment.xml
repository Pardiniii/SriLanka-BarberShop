<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003771"
    tools:context=".ui.payment.FinishPaymentFragment">


    <TextView
        android:id="@+id/Agradecimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agradecimento"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:fontFamily="@font/judson"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/Obrigado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obrigado pela compra!"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:fontFamily="@font/judson"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/Agradecimento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/imagemVerificado"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/verificado"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/Obrigado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/PagamentoAprovado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagamento Aprovado"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/judson"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imagemVerificado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/botaoVoltar"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/edit_botao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/PagamentoAprovado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        app:layout_constraintStart_toStartOf="@id/botaoVoltar"
        app:layout_constraintEnd_toEndOf="@id/botaoVoltar"
        app:layout_constraintTop_toTopOf="@id/botaoVoltar"
        android:fontFamily="@font/judson"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/botaoVoltar"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
